# Kite Connect Configuration
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=  # Set after login
KITE_REQUEST_TOKEN=  # For authentication

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_user_id_here

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-south-1

# Trading Configuration
TRADING_CAPITAL=100000
MAX_DAILY_LOSS_PERCENT=3
CONSERVATIVE_ALLOCATION=60
AGGRESSIVE_ALLOCATION=40
RISK_PER_TRADE=0.02
MAX_POSITIONS=5

# Strategy Configuration
ENABLE_IRON_CONDOR=true
ENABLE_CREDIT_SPREADS=true
ENABLE_STRADDLES=false
ENABLE_DIRECTIONAL=false

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_ML_PREDICTIONS=false
ENABLE_YOUTUBE_ANALYSIS=true
ENABLE_REAL_TIME_DATA=true

# Monitoring
LOG_LEVEL=INFO
ENABLE_CLOUDWATCH=false
WEBHOOK_URL=  # For external monitoring

# YouTube API (Optional)
YOUTUBE_API_KEY=your_youtube_api_key

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true